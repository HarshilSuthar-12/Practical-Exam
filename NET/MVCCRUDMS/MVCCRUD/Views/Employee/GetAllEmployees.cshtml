@using MVCCRUD.Models
@{
    Layout = null;
}
@model List<TBLEmployee>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>GetAllEmployees</title>
</head>
<body>
    <div> 
        @Html.ActionLink("Insert Employee","Insert","Employee")
        <table border="1">
            <tr>
                <th>id</th>
                <th>Empid</th>
                <th>Name</th>
                <th>City</th>
                <th>Bdate</th>
                <th></th>
                <th></th>
            </tr>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td>@Model[i].Id_PK</td>
                    <td>@Model[i].EmployeeID</td>
                    <td>@Model[i].Name</td>
                    <td>@Model[i].City</td>
                    <td>@Model[i].BirthDate</td>
                    <td>@Html.ActionLink("Update","Update","Employee",new { id = Model[i].Id_PK },new { style="color:red"})</td>
                    <td>@Html.ActionLink("Delete","Delete","Employee",new { id = Model[i].Id_PK },new { style="color:red"})</td>
                </tr>
            }
        </table>
    </div>
</body>
</html>
